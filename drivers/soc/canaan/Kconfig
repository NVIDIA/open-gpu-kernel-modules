config SOC_K210_SYSCTL
	bool "Canaan Kendryte K210 SoC system controller"
	depends on RISCV && SOC_CANAAN && OF
	default SOC_CANAAN
        select PM
        select SIMPLE_PM_BUS
        select SYSCON
        select MFD_SYSCON
	help
	  Canaan Kendryte K210 SoC system controller driver.
