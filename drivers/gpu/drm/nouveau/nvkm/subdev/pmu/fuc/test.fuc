#ifdef INCLUDE_PROC
process(PROC_TEST, #test_init, #test_recv)
#endif

/******************************************************************************
 * TEST data segment
 *****************************************************************************/
#ifdef INCLUDE_DATA
#endif

/******************************************************************************
 * TEST code segment
 *****************************************************************************/
#ifdef INCLUDE_CODE
// description
//
// $r15 - current (test)
// $r14 - sender process name
// $r13 - message
// $r12 - data0
// $r11 - data1
// $r0  - zero
test_recv:
	nv_iord($r1, NV_PPWR_DSCRATCH(2))
	add b32 $r1 1
	nv_iowr(NV_PPWR_DSCRATCH(2), $r1)
	imm32($r14, 0x134fd900)
	call(timer)
	ret

// description
//
// $r15 - current (test)
// $r0  - zero
test_init:
	mov $r14 0x800
	call(timer)
	ret
#endif
