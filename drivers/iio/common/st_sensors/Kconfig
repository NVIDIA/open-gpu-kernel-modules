# STMicroelectronics sensors common library
#

config IIO_ST_SENSORS_I2C
	tristate
	select REGMAP_I2C

config IIO_ST_SENSORS_SPI
	tristate
	select REGMAP_SPI

config IIO_ST_SENSORS_CORE
	tristate
	select IIO_ST_SENSORS_I2C if I2C
	select IIO_ST_SENSORS_SPI if SPI_MASTER
