menuconfig PINCTRL_UNIPHIER
	bool "UniPhier SoC pinctrl drivers"
	depends on ARCH_UNIPHIER || COMPILE_TEST
	depends on OF && MFD_SYSCON
	default y
	select PINMUX
	select GENERIC_PINCONF

if PINCTRL_UNIPHIER

